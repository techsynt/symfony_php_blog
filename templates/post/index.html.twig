{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}
{% block stylesheets  %}
    {{ parent() }}
    <style type="text/css">
        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: #09ffc2;
        }
        td{
            cursor:pointer;
        }
    </style>
{% endblock %}
{% block body %}
    <h1> My personal blog</h1>
    <p>Random number through ajax: <i class="randNumber">5</i>
        <button type="button" class="btn btn-sm btn-outline-success">update</button>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created_at</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr onclick="window.location.href = '{{ path('post_show', {'id':post.id}) }}'">
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}"><button type="button" class="btn btn-info"> Create new</button></a>
{% endblock %}
